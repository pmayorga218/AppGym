<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/textura"
    tools:context=".ObjetivoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/textura"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:onClick="irPerfil"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/po"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!-- Opción 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:text="@string/Perderpeso"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:text="@string/Disminuyeturequerimientocaloricoun20"
                android:textAlignment="center"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Opción 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:text="@string/Perderpesolentamente"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="233dp"
                android:layout_height="wrap_content"
                android:text="@string/Disminuyeturequerimientocaloricoun10"
                android:textAlignment="center"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Opción 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:text="@string/Mantenerpeso"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Nomodificaturequerimientocalorico"
                android:textAlignment="center"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Opción 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:text="@string/Aumentarpesolentamente"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:text="@string/Aumentaturequerimientocaloricoun10"
                android:textAlignment="center"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Opción 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:text="@string/Aumentarpeso"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:text="@string/Aumentaturequerimientocaloricoun20"
                android:textAlignment="center"
                android:textColor="@color/white" />
        </LinearLayout>

        <Button
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="@color/design_default_color_error"
            android:text="@string/boton_confirmar"
            android:onClick="irPerfil"
            android:textSize="16sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>